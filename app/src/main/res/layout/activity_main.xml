<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backgrd"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:alpha="0.9"
        android:elevation="0dp"
        android:paddingBottom="50dp"
        android:paddingLeft="180dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:alpha="0.7"
        android:background="@drawable/buttonshape"
        android:onClick="onClickSettings"
        android:shadowColor="#2E2D2B"
        android:shadowDx="0"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/sensor_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignBaseline="@+id/settings_button"
        android:layout_alignBottom="@+id/settings_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="200dp"
        android:alpha="0.7"
        android:background="@drawable/buttonshape"
        android:onClick="onClickSensorDetails"
        android:shadowColor="#2E2D2B"
        android:shadowDx="0"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:text="Sensors"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


</RelativeLayout>